    <masterLabel>negOptim Community Users Manager</masterLabel>
    <targets>
        <target>lightning__RecordPage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <property name="showEditButton" label="show action button Edit" type="Boolean" default="true"/>
